<%- include("../../views/partials/admin/header.ejs") %>

<style>
    /* Essential Order Management Styles */
    .order-stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .order-stat-card {
        background-color: var(--purple-light);
        color: white;
        padding: 20px;
        border-radius: 10px;
        display: flex;
        align-items: center;
    }

    .order-stat-card .order-stat {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }

    .order-stat-card h3 {
        font-size: 16px;
        margin-bottom: 15px;
    }

    .order-stat-card .order-number {
        font-size: 28px;
        font-weight: bold;
    }

    .order-stat-card .order-icon {
        color: #3eff3e;
        width: 50px;
        height: 50px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(255, 255, 255, 0.2);
    }

    .order-search-container {
        display: flex;
    }

    .order-search-btn, .order-clear-btn {
        margin-left: 10px;
        border-radius: 5px;
        padding: 10px 20px;
        border: none;
        color: white;
    }

    .order-search-btn {
        background-color: var(--purple-light);
    }

    .order-clear-btn {
        background-color: #d33;
        text-decoration: none;
    }

    .order-search-container input.order-form-control {
        padding: 10px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 5px;
    }

    .order-table-container {
        background-color: var(--gray-dark);
        border-radius: 8px;
        margin-bottom: 30px;
    }

    .order-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .order-table th {
        background-color: var(--gray-dark);
        color: white;
        font-weight: 600;
        padding: 12px 15px;
        border-bottom: 2px solid var(--purple-light);
    }

    .order-table td {
        padding: 12px 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .order-status {
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
    }

    /* Order Status Colors */
    .order-status-pending {
        background-color: #fef5e7;
        color: #f39c12; /* Orange for Pending */
    }

    .order-status-processing {
        background-color: #e8f4fd;
        color: #3498db; /* Blue for Processing */
    }

    .order-status-shipped {
        background-color: #e9f7ef;
        color: #27ae60; /* Green for Shipped */
    }

    .order-status-out-for-delivery {
        background-color: #fef9e7;
        color: #f1c40f; /* Yellow for Out for Delivery */
    }

    .order-status-delivered {
        background-color: #d5f5e3;
        color: #2ecc71; /* Bright Green for Delivered */
    }

    .order-status-cancelled {
        background-color: #f9ebeb;
        color: #e74c3c; /* Red for Cancelled */
    }

    .order-status-return-request {
        background-color: #f5eef8;
        color: #8e44ad; /* Purple for Return Request */
    }

    .order-status-returned {
        background-color: #ebdef0;
        color: #9b59b6; /* Lighter Purple for Returned */
    }

    .order-status-return-rejected {
        background-color: #fadbd8;
        color: #c0392b; /* Darker Red for Return Rejected */
    }

    .order-action-buttons .order-btn-action {
        width: 30px;
        height: 30px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--purple-light);
        color: white;
        border: none;
        cursor: pointer;
    }

    .pagination .page-item.active .page-link {
        background-color: var(--purple-light);
        border-color: var(--purple-light);
        color: white;
    }

    @media (max-width: 768px) {
        .order-stats-container {
            grid-template-columns: 1fr 1fr;
        }
    }

    @media (max-width: 576px) {
        .order-stats-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<div>
    <h2>Order Details</h2>
</div>

<div id="content">
    <!-- Stats Cards -->
    <div class="order-stats-container">
        <div class="order-stat-card">
            <div class="order-stat">
                <div>
                    <h3>Total Orders</h3>
                    <div class="order-number">1,248</div>
                </div>
                <div class="order-icon"><i class="bi bi-bag"></i></div>
            </div>
        </div>
        <div class="order-stat-card">
            <div class="order-stat">
                <div>
                    <h3>Pending Orders</h3>
                    <div class="order-number">42</div>
                </div>
                <div class="order-icon"><i class="bi bi-clock"></i></div>
            </div>
        </div>
        <div class="order-stat-card">
            <div class="order-stat">
                <div>
                    <h3>Delivered Orders</h3>
                    <div class="order-number">896</div>
                </div>
                <div class="order-icon"><i class="bi bi-check-circle"></i></div>
            </div>
        </div>
        <div class="order-stat-card">
            <div class="order-stat">
                <div>
                    <h3>Return Requests</h3>
                    <div class="order-number">15</div>
                </div>
                <div class="order-icon"><i class="bi bi-arrow-counterclockwise"></i></div>
            </div>
        </div>
    </div>

    <!-- Search Section -->
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="order-search-container d-flex">
                <form action="/admin/orders" class="d-flex w-100">
                    <input type="text" id="searchInput" class="order-form-control" name="search" placeholder="Search orders...">
                    <button type="submit" id="searchButton" class="order-btn order-search-btn">
                        <i class="bi bi-search"></i>
                    </button>
                    <a href="/admin/orders" class="order-btn order-clear-btn">Clear</a>
                </form>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="table-responsive">
        <table class="order-table table-hover">
            <thead>
                <tr>
                    <th>CUSTOMER</th>
                    <th>ORDER ID</th>
                    <th>DATE</th>
                    <th>AMOUNT</th>
                    <th>STATUS</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody id="ordersTableBody">
                <% orderData.forEach((order) => { %>
                <tr>

                    <td>
                        <div><%= order.userId.name %></div>
                        <div style="font-size: 12px; color: #888;"><%= order.userId.email %></div>
                    </td>
                    <td><%= order.orderId %></td>
                    <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                    <td>â‚¹ <%= order.totalPrice %></td>
                    <td>
                        <span class="order-status order-status-<%= order.status.toLowerCase().replace(/\s+/g, '-') %>">
                            <%= order.status %>
                        </span>
                    </td>
                    <td>
                        <div class="order-action-buttons">
                            <a href="/admin/adminOrderDetails?orderId=<%=order._id%>"><button class="order-btn-action btn-view"><i class="bi bi-eye"></i></button></a>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="container mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-20">
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<%- include("../../views/partials/admin/footer.ejs") %>