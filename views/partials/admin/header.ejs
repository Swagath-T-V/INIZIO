    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        :root {
            --bg-light: #ffffff;
            --text-light: #333333;
            --bg-dark: #121212;
            --text-dark: #ffffff;
            --purple-light: #8a3fff;
            --purple-dark: #ab66ff;
            --gray-light: #f4f4f4;
            --gray-dark: #1e1e1e;
        }

        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--gray-dark);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--purple-light);
            border-radius: 4px;
        }

        .light-mode ::-webkit-scrollbar-track {
            background: var(--gray-light);
        }

        .light-mode ::-webkit-scrollbar-thumb {
            background: var(--purple-light);
            border-radius: 4px;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-dark);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        body.light-mode {
            background-color: var(--bg-light);
            color: var(--text-light);
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: var(--gray-dark);
            padding: 20px;
            position: fixed;
            left: 0;
            top: 0;
            transition: background-color 0.3s ease;
            z-index: 10;
            overflow-y: auto; 
        }

        .light-mode .sidebar {
            background-color: var(--gray-light);
            color: var(--text-light);
        }

        .sidebar-logo {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 30px;
            color: var(--purple-light);
        }

        .sidebar-menu {
            list-style: none;
        }

        .sidebar-menu-item {
            padding: 12px 15px;
            cursor: pointer;
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .sidebar-menu-item:hover {
            background-color: rgba(255,255,255,0.1);
        }

        .sidebar-menu-item.active {
            background-color: var(--purple-light);
            color: white;
        }

        .light-mode .sidebar-menu-item.active {
            background-color: var(--purple-light);
            color: white;
        }

        .header {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 10px;
            background-color: var(--bg-dark);
            margin-bottom: 20px;
        }

        .light-mode .header {
            background-color: var(--bg-light);
        }

        .theme-toggle, .pdf-download {
            background-color: var(--purple-light);
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 50%;
            cursor: pointer;
            margin-left: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .profile-icon {
            background-color: transparent;
            border: 2px solid var(--purple-light);
            color: var(--purple-light);
            font-weight: bold;
            padding: 10px 15px;
            border-radius: 50%;
            cursor: pointer;
            margin-left: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .header-actions {
            display: flex;
            align-items: center;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background-color: var(--purple-light);
            color: white;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            align-items: center;
        }

        .stat-card-icon {
            margin-right: 15px;
            font-size: 24px;
        }

        .stat-card-content {
            flex-grow: 1;
        }

        .sales-analysis {
            background-color: var(--gray-dark);
            border-radius: 10px;
            padding: 20px;
            height: calc(100% - 330px);
        }

        .light-mode .sales-analysis {
            background-color: var(--gray-light);
        }

        .chart-container {
            width: 100%;
            height: 100%;
        }

        @media (max-width: 1024px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        .clicked, .active, .selected {
            color: white !important;
        }

        .dashboard-container {
            display: flex;
            flex-grow: 1;
            min-height: 100%;
        }

        .main-content {
            margin-left: 250px;
            width: calc(100% - 250px);
            padding: 20px;
            overflow-y: auto;
            min-height: calc(100vh - 40px);
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
                overflow-y: auto; /* Maintain scrollbar in smaller screens */
            }
            .main-content {
                margin-left: 200px;
                width: calc(100% - 200px);
            }
        }

        @media (max-width: 576px) {
            .sidebar {
                width: 0;
                transform: translateX(-100%);
                overflow-y: auto; /* Maintain scrollbar in mobile view */
            }
            .sidebar.active {
                width: 200px;
                transform: translateX(0);
            }
            .main-content {
                margin-left: 0;
                width: 100%;
            }
        }
    </style>
</head>
