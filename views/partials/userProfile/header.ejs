    <style>
        /* Dropdown Styles */
        .dropdown {
            position: relative;
            display: inline-block;
        }
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            right: 0;
        }
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            width: 100%;
        }
        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }
        .dropdown:hover .dropdown-content {
            display: block;
        }
        .header {
            position: relative;
            z-index: 500;
        }

        /* Navbar Styles with Black Background */
        .ftco-navbar-light {
            background-color: #000000 !important;
            position: relative;
            z-index: 1000;
            top: 0px;
            left: 0;
            right: 0;
            padding: 0;
        }
        .ftco-navbar-light .navbar-brand {
            color: white !important;
        }
        .ftco-navbar-light .navbar-nav > .nav-item > .nav-link {
            font-size: 10px;
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
            padding-left: 20px;
            padding-right: 20px;
            font-weight: 400;
            color: white !important;
            text-transform: uppercase;
            letter-spacing: 2px;
            opacity: 1 !important;
        }
        .ftco-navbar-light .navbar-nav > .nav-item.active > a {
            color: #ffffff !important;
        }
        .ftco-navbar-light .navbar-nav > .nav-item.cta > a {
            color: white !important;
        }

        /* User Profile Styles */
        :root {
            --up-primary-color: #5a73f8;
            --up-secondary-color: #7a8290;
            --up-light-bg: #f9fafc;
            --up-dark-text: #2a2e38;
            --up-border: #e3e6eb;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        body {
            background-color: var(--up-light-bg);
            color: var(--up-dark-text);
        }
        .up_container {
            display: flex;
            min-height: 100vh;
            margin-top: 80px;
        }
        .up_sidebar {
            width: 260px;
            background: linear-gradient(180deg, #ffffff, #f5f6fa);
            box-shadow: 2px 0 12px rgba(0, 0, 0, 0.06);
            padding: 25px;
            border-right: 1px solid var(--up-border);
            position: relative;
            z-index: 500;
        }
        .up_main-content {
            flex: 1;
            padding: 35px;
            overflow-y: auto;
            background-color: var(--up-light-bg);
        }
        .up_nav-menu {
            list-style: none;
            margin-top: 35px;
        }
        .up_nav-item {
            margin-bottom: 12px;
        }
        .up_nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            text-decoration: none;
            color: var(--up-dark-text);
            border-radius: 6px;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        .up_nav-link:hover {
            background-color: rgba(90, 115, 248, 0.15);
            color: var(--up-primary-color);
        }
        .up_nav-link.active {
            background-color: var(--up-primary-color);
            color: white;
            box-shadow: 0 2px 8px rgba(90, 115, 248, 0.3);
        }
        .up_nav-link i {
            margin-right: 12px;
            font-size: 20px;
        }

        /* Profile Section Styles */
        .up_tab-content {
            display: none;
        }
        .up_tab-content.active {
            display: block;
        }
        .up_profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 35px;
            border-bottom: 1px solid var(--up-border);
            padding-bottom: 20px;
        }
        .up_profile-avatar {
            position: relative;
            width: 110px;
            height: 110px;
            border-radius: 50%;
            overflow: hidden;
            cursor: pointer;
            margin-right: 25px;
            border: 3px solid var(--up-primary-color);
        }
        .up_default-avatar {
            width: 100%;
            height: 100%;
            background-color: #e8ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 45px;
            color: var(--up-secondary-color);
        }
        .up_profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }
        .up_profile-avatar input {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }
        .up_change-image-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background: rgba(255, 255, 255, 0.85);
            color: var(--up-primary-color);
            text-align: center;
            padding: 6px 0;
            font-size: 13px;
            font-weight: 600;
            border-top: 1px solid var(--up-border);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .up_profile-avatar:hover .up_change-image-overlay {
            opacity: 1;
        }
        .up_profile-info h1 {
            margin-bottom: 6px;
            font-size: 26px;
            color: var(--up-dark-text);
        }
        .up_profile-info p {
            color: var(--up-secondary-color);
            font-size: 14px;
        }
        .up_card {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.06);
            padding: 25px;
            margin-bottom: 25px;
            border: 1px solid var(--up-border);
        }
        .up_card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 15px;
            margin-bottom: 15px;
            border-bottom: 1px solid var(--up-border);
        }
        .up_card-title {
            font-size: 19px;
            font-weight: 600;
            color: var(--up-dark-text);
        }
        .up_card-body {
            padding: 0;
        }
        .up_info-group {
            margin-bottom: 18px;
        }
        .up_info-label {
            font-size: 15px;
            color: var(--up-secondary-color);
            margin-bottom: 6px;
        }
        .up_info-value {
            font-size: 17px;
            color: var(--up-dark-text);
        }
        .up_btn {
            padding: 9px 18px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }
        .up_btn-outline {
            background-color: transparent;
            border: 1px solid var(--up-primary-color);
            color: var(--up-primary-color);
        }
        .up_btn-outline:hover {
            background-color: var(--up-primary-color);
            color: white;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .up_container {
                flex-direction: column;
                margin-top: 60px;
            }
            .up_sidebar {
                width: 100%;
                order: 2;
                border-right: none;
                border-top: 1px solid var(--up-border);
            }
            .up_main-content {
                order: 1;
                padding: 25px;
            }
            .up_profile-header {
                flex-direction: column;
                text-align: center;
            }
            .up_profile-avatar {
                margin-right: 0;
                margin-bottom: 20px;
            }
        }
        .ftco-navbar-light.scrolled .nav-item.cta > a span {
            display: inline-block;
            color: #ffffff !important;
        }
        
    </style>
</head>
