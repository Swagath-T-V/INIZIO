<%- include("../../views/partials/userProfile/header.ejs") %>
<style>
    .dashboard-referral-section {
        background: #ffffff;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .dashboard-section-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .dashboard-input {
        flex: 1;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #eee;
        font-size: 16px;
    }

    .dashboard-btn {
        padding: 12px 20px;
        border: none;
        border-radius: 6px;
        font-weight: 600; 
        cursor: pointer;
    }

    .dashboard-btn-primary {
        background-color: #4F46E5;
        color: white;
    }

    .dashboard-btn-primary:hover {
        background-color: #4338ca;
    }

    .up_profile-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .up_profile-avatar {
        position: relative;
        width: 110px;
        height: 110px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--up-primary-color, #4F46E5); 
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .up_default-avatar {
        width: 100%;
        height: 100%;
        background-color: #e8ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 45px;
        color: var(--up-secondary-color, #6B7280); 
        text-align: center;
        line-height: 110px; 
    }

    .up_profile-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .up_profile-info h1 {
        font-size: 24px;
        font-weight: 600;
        margin: 0;
    }

    .up_profile-info p {
        color: #6B7280;
        margin: 5px 0 0;
    }

    .up_card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 30px;
    }

    .up_card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .up_card-title {
        font-size: 20px;
        font-weight: 600;
    }

    .up_btn-outline {
        padding: 8px 16px;
        border: 1px solid #4F46E5;
        color: #4F46E5;
        background-color: transparent;
        text-decoration: none;
        border-radius: 6px;
    }

    .up_btn-outline:hover {
        background-color: #eef2ff;
    }

    .up_info-group {
        margin-bottom: 15px;
    }

    .up_info-label {
        font-weight: 500;
        color: #6B7280;
        margin-bottom: 5px;
    }

    .up_info-value {
        font-size: 16px;
        color: #1F2937;
    }
</style>

